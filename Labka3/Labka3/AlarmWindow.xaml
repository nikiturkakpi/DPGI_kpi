<Window x:Class="Labka3.AlarmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Alarm Time" 
        Height="200" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <StackPanel Margin="20">
        <TextBlock Text="Set Alarm Time:" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <ComboBox x:Name="HoursComboBox" Width="60" Margin="0,0,10,0"/>
            <TextBlock Text=":" VerticalAlignment="Center"/>
            <ComboBox x:Name="MinutesComboBox" Width="60" Margin="10,0,10,0"/>
            <TextBlock Text=":" VerticalAlignment="Center"/>
            <ComboBox x:Name="SecondsComboBox" Width="60" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="OK" Width="80" Click="OK_Click"/>
        </StackPanel>
    </StackPanel>
</Window>