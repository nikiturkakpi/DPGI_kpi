<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grid" Height="400" Width="500">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="1" Content="Labe" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <TextBox Grid.Row="1" Grid.Column="0" Text="TextBoxx" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <Button Grid.Row="2" Grid.Column="1" Content="Кнопочка" Margin="5"/>
    </Grid>
</Window>
