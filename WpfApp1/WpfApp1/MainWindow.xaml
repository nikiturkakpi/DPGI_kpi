<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskWrap" Height="300" Width="550">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <Label Content="Label 1" Margin="5"/>
            <TextBox Text="TextBox 1"/>
            <TextBox Text="TextBox 2"/>
            <TextBox Text="TextBox 3"/>
            <TextBox Text="TextBox 4"/>
            <TextBox Text="TextBox 5"/>
            <TextBox Text="TextBox 6"/>
            <TextBox Text="TextBox 7"/>
            <TextBox Text="TextBox 8"/>
        </WrapPanel>
        <WrapPanel Grid.Row="1">
            <Label Content="Label 2" Margin="5"/>
            <TextBox Text="TextBox 1"/>
            <TextBox Text="TextBox 2"/>
            <TextBox Text="TextBox 3"/>
            <TextBox Text="TextBox 4"/>
            <TextBox Text="TextBox 5"/>
            <TextBox Text="TextBox 6"/>
            <TextBox Text="TextBox 7"/>
            <TextBox Text="TextBox 8"/>
            <Button Content="Кнопочка" Width="100" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="250 30 0 0"/>
        </WrapPanel>
    </Grid>
</Window>
